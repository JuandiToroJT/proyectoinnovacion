@model ProyectoInventariosWebApp.Models.Empresas

@{
    ViewData["Title"] = "Editar Empresa";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">Editar Empresa</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdEmpresa" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre de la empresa" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Direccion" class="form-label"></label>
                    <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Nit" class="form-label"></label>
                    <input asp-for="Nit" class="form-control" placeholder="NIT" />
                    <span asp-validation-for="Nit" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ciudad" class="form-label"></label>
                    <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaCreacion" class="form-label">Fecha de Creacion</label>
                    <input asp-for="FechaCreacion" class="form-control" type="date" readonly />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RepresentanteLegal" class="form-label">Representante Legal</label>
                    <input asp-for="RepresentanteLegal" class="form-control" placeholder="Representante Legal" />
                    <span asp-validation-for="RepresentanteLegal" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoEmpresa" class="form-label">Tipo de empresa</label>
                    <input asp-for="TipoEmpresa" class="form-control" placeholder="Tipo de Empresa" />
                    <span asp-validation-for="TipoEmpresa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PaginaWeb" class="form-label">Pagina Web</label>
                    <input asp-for="PaginaWeb" class="form-control" type="url" placeholder="https://ejemplo.com" />
                    <span asp-validation-for="PaginaWeb" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmailContacto" class="form-label">Email</label>
                    <input asp-for="EmailContacto" class="form-control" type="email" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="EmailContacto" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Details" asp-route-id="@Model.IdEmpresa" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
