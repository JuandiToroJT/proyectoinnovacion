@model ProyectoInventariosWebApp.Models.Pedidos

@{
    ViewData["Title"] = "Agregar Pedido";
}

<div class="container mt-4">
    <h2 class="mb-4">Agregar Nuevo Pedido</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="IdCliente" class="form-label">Cliente</label>
                    <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.IdCliente"></select>
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Empleado</label>
                    <input type="text" class="form-control" value="@UsuarioLogueado.Nombre" disabled />
                    <input type="hidden" asp-for="IdUsuario" value="@UsuarioLogueado.Id" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
