@model ProyectoInventariosWebApp.Models.Productos

@{
    ViewData["Title"] = "Agregar Producto";
}

<div class="crear-container">
    <div class="form-card">
        <h2>Registrar nuevo producto</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="input-group">
                <label asp-for="Nombre">Nombre del producto</label>
                <input asp-for="Nombre" class="form-input" placeholder="Ej: Tornillo M5" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Descripcion">Descripción</label>
                <input asp-for="Descripcion" class="form-input" placeholder="Detalles o características" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="row-inputs">
                <div class="input-group">
                    <label asp-for="Precio">Precio</label>
                    <input asp-for="Precio" class="form-input" type="number" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="Stock">Cantidad</label>
                    <input asp-for="Stock" class="form-input" type="number" placeholder="0" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="botones">
                <a asp-action="Index" class="btn gris">Volver</a>
                <button type="submit" class="btn azul">Guardar Producto</button>
            </div>
        </form>
    </div>

    <div class="form-ilustracion">
        <img src="https://www.larutaroja.com/wp-content/uploads/2021/01/la-ruta-roja-equipo.svg" alt="Ilustración formulario" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
