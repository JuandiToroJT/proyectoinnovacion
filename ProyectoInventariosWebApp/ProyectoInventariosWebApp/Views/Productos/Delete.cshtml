@model ProyectoInventariosWebApp.Models.Productos

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="text-center mb-4">
            <h2 class="text-danger fw-bold">¿Eliminar producto?</h2>
            <p class="text-muted">Esta acción <strong>no se puede deshacer</strong>.</p>
        </div>

        <div class="card bg-light border-0 shadow-sm rounded-4 mb-4">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-end fw-semibold text-secondary">Nombre:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4 text-end fw-semibold text-secondary">Descripción:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt class="col-sm-4 text-end fw-semibold text-secondary">Precio:</dt>
                    <dd class="col-sm-8">$@Html.DisplayFor(model => model.Precio)</dd>

                    <dt class="col-sm-4 text-end fw-semibold text-secondary">Stock:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdProducto" />
            <div class="d-flex justify-content-end gap-3 mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-3">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger px-4 py-2 rounded-3">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </div>
        </form>
    </div>
</div>
