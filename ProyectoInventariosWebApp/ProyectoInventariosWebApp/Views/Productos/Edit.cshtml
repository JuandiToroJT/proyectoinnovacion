@model ProyectoInventariosWebApp.Models.Productos

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Editar Producto</h2>
            <p class="text-muted">Modifica los campos necesarios y guarda los cambios.</p>
        </div>

        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdProducto" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control rounded-3 shadow-sm" placeholder="Nombre del producto" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                    <input asp-for="Descripcion" class="form-control rounded-3 shadow-sm" placeholder="Descripción del producto" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Precio" class="form-label fw-semibold"></label>
                    <input asp-for="Precio" class="form-control rounded-3 shadow-sm" type="number" step="0.01" min="0" placeholder="Precio del producto" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Stock" class="form-label fw-semibold"></label>
                    <input asp-for="Stock" class="form-control rounded-3 shadow-sm" type="number" min="0" placeholder="Cantidad disponible" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-5">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-3">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <button type="submit" class="btn btn-primary px-4 py-2 rounded-3 shadow-sm">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
