@model ProyectoInventariosWebApp.Models.Usuarios

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Detalles del Usuario</h2>

    <div class="card shadow-sm p-4 border-0">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold text-secondary">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Correo</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Rol</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">
                    @(Model.Estado ? "Activo" : "Inactivo")
                </span>
            </dd>
        </dl>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver
        </a>
        <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>
    </div>
</div>
