<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto Inventarios</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoInventariosWebApp.styles.css" asp-append-version="true" />

    <style>
        /* === NAVBAR === */
        .navbar {
            background: linear-gradient(90deg, #007bff, #00b4d8);
        }

        .navbar-brand .logo {
            height: 45px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                text-decoration: underline;
                opacity: 0.9;
            }

        .navbar-text {
            color: #f8f9fa !important;
            font-size: 0.95rem;
        }

        .btn-cerrar-sesion {
            background-color: #dc3545;
            border: none;
            color: white;
            transition: 0.3s;
        }

            .btn-cerrar-sesion:hover {
                background-color: #bb2d3b;
            }

        /* === CONTENEDOR PRINCIPAL === */
        .pcontainer {
            background-color: #ffffff;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-top: 20px;
        }

        body {
            background-color: #f5f6fa;
        }

        /* === FOOTER === */
        footer.footer {
            background-color: #f1f1f1;
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <header>
        @if (UsuarioLogueado.Id.HasValue)
        {
            <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
                        <img class="logo me-2" src="@Url.Content("~/logo.png")" alt="Logo" />
                        Proyecto Inventarios
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            @if (UsuarioLogueado.Rol == "Administrador")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Empresas" asp-action="Details" asp-route-id="@EmpresaActual.Id">Empresa</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Productos" asp-action="Index">Inventario</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                                </li>
                            }
                        </ul>

                        <div class="d-flex align-items-center">
                            <span class="navbar-text me-3">
                                <strong>@UsuarioLogueado.Nombre</strong> |
                                Rol: <strong>@UsuarioLogueado.Rol</strong>
                            </span>
                            <a class="btn btn-cerrar-sesion btn-sm px-3" asp-controller="Home" asp-action="Logout">Cerrar sesión</a>
                        </div>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3 pcontainer">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 border-top text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - <strong>@EmpresaActual.Nombre</strong> |
            Tel: @EmpresaActual.Telefono |
            Correo: @EmpresaActual.Correo |
            @EmpresaActual.Ciudad
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
