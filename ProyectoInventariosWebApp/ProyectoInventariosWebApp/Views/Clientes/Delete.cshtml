@model ProyectoInventariosWebApp.Models.Clientes

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-4">
    <h2 class="text-danger">¿Estás seguro que deseas eliminar este cliente?</h2>

    <div class="alert alert-warning mt-3">
        Esta acción no se puede deshacer.
    </div>

    <div class="card shadow-sm p-4 mb-3">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3">Dirección</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </div>
    </form>
</div>
