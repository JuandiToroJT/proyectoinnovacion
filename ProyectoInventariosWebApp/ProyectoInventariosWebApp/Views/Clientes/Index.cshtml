@model IEnumerable<ProyectoInventariosWebApp.Models.Clientes>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<div class="container">
    <h1 class="mt-4 mb-4">Gestión de Clientes</h1>

    <div class="mb-3 text-end">
        <a class="btn btn-primary" asp-action="Create">Agregar Cliente</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.IdCliente">Editar</a>
                        <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@item.IdCliente">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdCliente">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
