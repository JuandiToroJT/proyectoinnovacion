@model ProyectoInventariosWebApp.Models.Clientes

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles del Cliente</h2>
    <div class="card shadow-sm p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3">Dirección</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
        </dl>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
        <a asp-action="Edit" asp-route-id="@Model.IdCliente" class="btn btn-primary">Editar</a>
    </div>
</div>
