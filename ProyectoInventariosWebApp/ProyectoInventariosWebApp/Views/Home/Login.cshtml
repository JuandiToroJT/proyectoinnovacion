@model ProyectoInventariosWebApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<style>
    body {
        background-color: #f3f6fb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f3f6fb;
        padding: 0 2rem;
    }

    .login-container {
        display: flex;
        max-width: 900px;
        width: 100%;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .login-form {
        flex: 1;
        padding: 3rem 2rem;
    }

    .login-form h2 {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .login-form p {
        color: #666;
        margin-bottom: 2rem;
    }

    .login-form input {
        border-radius: 6px;
        padding: 0.75rem;
    }

    .btn-login {
        background-color: #3b82f6;
        border: none;
        width: 100%;
        padding: 0.75rem;
        border-radius: 6px;
        color: white;
        font-weight: 500;
        transition: background-color 0.3s;
    }

    .btn-login:hover {
        background-color: #2563eb;
    }

    .forgot-password {
        display: block;
        text-align: center;
        margin-top: 1rem;
        color: #3b82f6;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .forgot-password:hover {
        text-decoration: underline;
    }

    .login-illustration {
        flex: 1;
        background-color: #e7f0ff;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .login-illustration img {
        width: 90%;
        max-width: 380px;
    }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-form">
            <h2>Sistema de Inventarios</h2>
            <p>Inicia sesión para continuar</p>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <input asp-for="Correo" class="form-control" placeholder="Usuario o correo electrónico" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Contrasena" type="password" class="form-control" placeholder="Contraseña" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-login">Iniciar sesión</button>
            </form>
            <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
        </div>

        <div class="login-illustration">
            <img src="https://static.vecteezy.com/system/resources/thumbnails/016/071/197/small/desktop-login-isometric-illustration-light-gradient-suitable-for-mobile-app-website-banner-diagrams-infographics-and-other-graphic-assets-vector.jpg" alt="Ilustración de inicio de sesión" />
        </div>
    </div>
</div>
