@model ProyectoInventariosWebApp.Models.DetallesPedido

@{
    ViewData["Title"] = "Agregar Producto al Pedido";
}

<div class="container mt-4">
    <h2 class="mb-4">Agregar Producto</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="IdPedido" value="@ViewBag.IdPedido" />

                <div class="mb-3">
                    <label asp-for="IdProducto" class="form-label">Producto</label>
                    <select asp-for="IdProducto" class="form-select" asp-items="ViewBag.IdProducto"></select>
                    <span asp-validation-for="IdProducto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Pedidos" asp-action="Details" asp-route-id="@ViewBag.IdPedido" class="btn btn-secondary">Volver al Pedido</a>
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
