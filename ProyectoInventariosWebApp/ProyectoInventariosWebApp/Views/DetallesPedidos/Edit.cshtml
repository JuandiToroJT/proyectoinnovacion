@model ProyectoInventariosWebApp.Models.DetallesPedido

@{
    ViewData["Title"] = "Editar Detalle";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Detalle del Producto</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdDetalle" />
                <input type="hidden" asp-for="IdPedido" />
                <input type="hidden" asp-for="IdProducto" />
                <input type="hidden" asp-for="Subtotal" />

                <div class="mb-3">
                    <label class="form-label">Producto</label>
                    <input class="form-control" value="@ViewBag.NombreProducto" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Pedidos" asp-action="Details" asp-route-id="@Model.IdPedido" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
